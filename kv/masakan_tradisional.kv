<MasakanTradisionalScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: (0.6, 0.4, 0.2, 1)  # Warna latar bertema tradisional
            Rectangle:
                pos: self.pos
                size: self.size

        # Header
        BoxLayout:
            size_hint_y: None
            height: 50
            Label:
                text: 'Masakan Tradisional'
                font_size: 24
                color: (1, 1, 1, 1)  # Warna teks putih untuk judul
                halign: 'center'
                valign: 'middle'
                size_hint_x: 1
                bold: True

        # Deskripsi di bawah judul
        Label:
            text: 'Temukan berbagai resep masakan tradisional favorit dari berbagai daerah.'
            font_size: 16
            size_hint_y: None
            height: '60dp'
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            color: (1, 1, 1, 1)  # Warna teks putih

        # Daftar Resep Masakan Tradisional
        ScrollView:
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10

                # Masakan Tradisional Item 1: Nasi Goreng Kampung
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '280dp'
                    Image:
                        source: 'img/nasi_goreng.png'
                        size_hint: (1, None)
                        height: '180dp'
                        allow_stretch: True
                        keep_ratio: True
                        on_touch_down: app.show_recipe('masakan1') if self.collide_point(*args[1].pos) else None
                    Label:
                        text: 'Resep Nasi Goreng Kampung: Nikmat dan Tradisional'
                        font_size: 20
                        bold: True
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        size_hint_y: None
                        height: '60dp'
                        color: (1, 1, 1, 1)

                # Masakan Tradisional Item 2: Sate Ayam
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '280dp'
                    Image:
                        source: 'img/sate.png'
                        size_hint: (1, None)
                        height: '180dp'
                        allow_stretch: True
                        keep_ratio: True
                        on_touch_down: app.show_recipe('masakan2') if self.collide_point(*args[1].pos) else None
                    Label:
                        text: 'Resep Sate Ayam: Rasa Tradisional yang Otentik'
                        font_size: 20
                        bold: True
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        size_hint_y: None
                        height: '60dp'
                        color: (1, 1, 1, 1)

        # Footer (Bottom Navigation Bar)
        BoxLayout:
            size_hint_y: None
            height: 60
            spacing: 10
            canvas.before:
                Color:
                    rgba: (0.95, 0.95, 0.95, 1)  # Warna latar abu terang untuk footer
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: 'Artikel'
                on_release: app.root.current = 'artikel'
                size_hint_x: 1
                background_color: (0.8, 0.3, 0.3, 1)  # Merah untuk Artikel
                color: (1, 1, 1, 1)
            Button:
                text: 'Beranda'
                on_release: app.root.current = 'beranda'
                size_hint_x: 1
                background_color: (0.3, 0.6, 0.3, 1)  # Hijau untuk Beranda
                color: (1, 1, 1, 1)
            Button:
                text: 'Resep'
                on_release: app.root.current = 'resep'
                size_hint_x: 1
                background_color: (0.3, 0.3, 0.8, 1)  # Biru untuk Resep
                color: (1, 1, 1, 1)
            Button:
                text: 'Profil'
                on_release: app.root.current = 'profil'
                size_hint_x: 1
                background_color: (0.8, 0.8, 0.3, 1)  # Kuning untuk Profil
                color: (1, 1, 1, 1)
