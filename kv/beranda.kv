<BerandaScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)  # White background
            Rectangle:
                pos: self.pos
                size: self.size

        # Header
        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10
            Label:
                text: 'Favorit'
                font_size: 24
                size_hint: (None, None)
                size: (50, 50)
            Image:
                source: 'img/logo.png'  # Path to your logo image
                size_hint: (None, None)
                size: (50, 50)  # Adjust size as needed
            Label:
                text: 'Let Him Cook'
                size_hint: (None, None)
                size: (200, 50)
                halign: 'center'
                valign: 'middle'
                color: (0, 0.5, 0, 1)  # Green color for the logo
                font_size: 24
                bold: True
            Label:
                text: 'Logout'
                font_size: 24
                size_hint: (None, None)
                size: (50, 50)

        # Search Bar
        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10
            TextInput:
                hint_text: 'Mau Masak Apa Hari Ini?'
                size_hint_x: 0.8
                background_normal: ''
                background_color: (0.95, 0.95, 0.95, 1)  # Light gray for search input
            Button:
                text: 'Cari'
                size_hint_x: 0.2
                background_color: (0.2, 0.6, 0.2, 1)  # Green color for search button
                color: (1, 1, 1, 1)  # White text

        # Categories Section
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height + 10
            Label:
                text: 'Telusuri Berdasarkan'
                size_hint_y: None
                height: 30
                font_size: 20
                color: (0, 0.5, 0, 1)  # Green color for the heading
            GridLayout:
                cols: 2
                size_hint_y: None
                height: self.minimum_height
                spacing: 15
                padding: 10

                # Category: Dessert
                Button:
                    size_hint: (1, None)
                    height: '150dp'  # Adjusted size for better alignment
                    on_release: app.show_category('dessert')
                    BoxLayout:
                        orientation: 'vertical'
                        padding: [5, 10, 5, 10]
                        spacing: 10
                        Label:
                            text: 'Dessert'
                            size_hint_y: 1
                            halign: 'center'
                            valign: 'middle'
                            color: (0, 0, 0, 1)
                            text_size: self.size  # Centers the text

                # Category: Masakan Tradisional
                Button:
                    size_hint: (1, None)
                    height: '150dp'
                    on_release: app.show_category('masakan_tradisional')
                    BoxLayout:
                        orientation: 'vertical'
                        padding: [5, 10, 5, 10]
                        spacing: 10
                        Label:
                            text: 'Masakan Tradisional'
                            size_hint_y: 1
                            halign: 'center'
                            valign: 'middle'
                            color: (0, 0, 0, 1)
                            text_size: self.size

                # Category: Resep Daging
                Button:
                    size_hint: (1, None)
                    height: '150dp'
                    on_release: app.show_category('resep_daging')
                    BoxLayout:
                        orientation: 'vertical'
                        padding: [5, 10, 5, 10]
                        spacing: 10
                        Label:
                            text: 'Resep Daging'
                            size_hint_y: 1
                            halign: 'center'
                            valign: 'middle'
                            color: (0, 0, 0, 1)
                            text_size: self.size

                # Category: Resep Ayam
                Button:
                    size_hint: (1, None)
                    height: '150dp'
                    on_release: app.show_category('resep_ayam')
                    BoxLayout:
                        orientation: 'vertical'
                        padding: [5, 10, 5, 10]
                        spacing: 10
                        Label:
                            text: 'Resep Ayam'
                            size_hint_y: 1
                            halign: 'center'
                            valign: 'middle'
                            color: (0, 0, 0, 1)
                            text_size: self.size

        # Footer (Bottom Navigation Bar)
        BoxLayout:
            size_hint_y: None
            height: 60
            spacing: 10
            canvas.before:
                Color:
                    rgba: (0.95, 0.95, 0.95, 1)  # Light gray background for footer
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: 'Artikel'
                on_release: app.root.current = 'artikel'
                size_hint_x: 1
                background_color: (0.8, 0.3, 0.3, 1)  # Red for Articles
                color: (1, 1, 1, 1)  # White text
                on_release: app.root.current = 'artikel'
            Button:
                text: 'Beranda'
                on_release: app.root.current = 'beranda'
                size_hint_x: 1
                background_color: (0.3, 0.6, 0.3, 1)  # Green for Home
                color: (1, 1, 1, 1)  # White text
            Button:
                text: 'Resep'
                on_release: app.root.current = 'resep'
                size_hint_x: 1
                background_color: (0.3, 0.3, 0.8, 1)  # Blue for Recipes
                color: (1, 1, 1, 1)  # White text
            Button:
                text: 'Profil'
                on_release: app.root.current = 'profil'
                size_hint_x: 1
                background_color: (0.8, 0.8, 0.3, 1)  # Yellow for Profile
                color: (1, 1, 1, 1)  # White text
