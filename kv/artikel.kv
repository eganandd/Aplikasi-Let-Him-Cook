<ArtikelScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: (0.8, 0.3, 0.3, 1)  # Background color
            Rectangle:
                pos: self.pos
                size: self.size

        # Header
        BoxLayout:
            size_hint_y: None
            height: 50
            Label:
                text: 'Artikel'
                font_size: 24
                color: (1, 1, 1, 1)  # White color for the title
                halign: 'center'
                valign: 'middle'
                size_hint_x: 1
                bold: True

        # Description below the title
        Label:
            text: 'Temukan beragam artikel yang akan membantumu memasak makanan lezat hari ini. Jangan lewatkan juga berbagai inspirasi seputar dapur maupun tren kuliner terbaru di sini.'
            font_size: 16
            size_hint_y: None
            height: '60dp'
            halign: 'center'  # Center align horizontally
            valign: 'middle'  # Center align vertically
            text_size: self.size  # Allows the label to wrap text properly
            color: (1, 1, 1, 1)  # Set text color to white for better readability

        # Article List
        ScrollView:
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height  # Ensures the height expands with content
                spacing: 10
                padding: 10

                # Example Article Items with adjusted Image width and height
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '280dp'  # Adjusted height for better proportions
                    Image:
                        source: 'img/telur.png'  # Replace with your image path
                        size_hint: (1, None)
                        height: '180dp'  # Image height is still large but not overwhelming
                        allow_stretch: True  # Allow the image to stretch to fit the height
                        keep_ratio: True  # Ensure the image keeps its aspect ratio
                        on_touch_down: app.show_recipe('artikel1') if self.collide_point(*args[1].pos) else None  # Navigate to resep1 on image touch
                    Label:
                        text: '10 Olahan Telur Agar Tidak Bosan Untuk Masakan Sehari-hari'
                        font_size: 20
                        bold: True
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        size_hint_y: None
                        height: '60dp'  # Adjust the label height for better appearance
                    
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '280dp'  # Adjusted height for better proportions
                    Image:
                        source: 'img/minuman.png'  # Replace with your image path
                        size_hint: (1, None)
                        height: '180dp'  # Consistent image height
                        allow_stretch: True
                        keep_ratio: True
                        on_touch_down: app.show_recipe('artikel2') if self.collide_point(*args[1].pos) else None  # Navigate to resep1 on image touch
                    Label:
                        text: '10 Ide Jualan Kekinian, Modalnya Kecil dan Cocok Untuk Pemula'
                        font_size: 20
                        bold: True
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        size_hint_y: None
                        height: '60dp'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '280dp'  # Adjusted height for better proportions
                    Image:
                        source: 'img/bekal.png'  # Replace with your image path
                        size_hint: (1, None)
                        height: '180dp'  # Consistent image height
                        allow_stretch: True
                        keep_ratio: True
                        on_touch_down: app.show_recipe('artikel3') if self.collide_point(*args[1].pos) else None  # Navigate to resep1 on image touch
                    Label:
                        text: '10 Ide Bekal Makan Siang Sederhana Untuk Anak Sekolah'
                        font_size: 20
                        bold: True
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        size_hint_y: None
                        height: '60dp'

        # Footer (Bottom Navigation Bar)
        BoxLayout:
            size_hint_y: None
            height: 60
            spacing: 10
            canvas.before:
                Color:
                    rgba: (0.95, 0.95, 0.95, 1)  # Light gray background for footer
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: 'Artikel'
                on_release: app.root.current = 'artikel'
                size_hint_x: 1
                background_color: (0.8, 0.3, 0.3, 1)  # Red for Articles
                color: (1, 1, 1, 1)  # White text
            Button:
                text: 'Beranda'
                on_release: app.root.current = 'beranda'
                size_hint_x: 1
                background_color: (0.3, 0.6, 0.3, 1)  # Green for Home
                color: (1, 1, 1, 1)  # White text
            Button:
                text: 'Resep'
                on_release: app.root.current = 'resep'
                size_hint_x: 1
                background_color: (0.3, 0.3, 0.8, 1)  # Blue for Recipes
                color: (1, 1, 1, 1)  # White text
            Button:
                text: 'Profil'
                on_release: app.root.current = 'profil'
                size_hint_x: 1
                background_color: (0.8, 0.8, 0.3, 1)  # Yellow for Profile
                color: (1, 1, 1, 1)  # White text
