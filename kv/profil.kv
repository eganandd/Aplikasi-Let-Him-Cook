<ProfilScreen>:
    name: 'profil'
    BoxLayout:
        orientation: 'vertical'
        
        # Isi Profil
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 15
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1  # Light gray background
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Header Label
            Label:
                text: 'Profil Saya'
                font_size: 28
                color: 0.2, 0.5, 0.8, 1  # Blue text color
                bold: True
                size_hint_y: 0.15
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None

            # Profile Picture
            Image:
                id: profile_pic
                source: 'img/profile.png'  # Default profile picture
                size_hint: None, None
                size: 150, 150  # Make the profile picture size consistent
                allow_stretch: True
                keep_ratio: True
                pos_hint: {'center_x': 0.5}
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 1  # Circle background for image
                    Ellipse:
                        pos: self.pos
                        size: self.size

            # Username Display
            Label:
                text: 'Username: Gegi'
                font_size: 18
                color: 0.3, 0.3, 0.3, 1
                bold: True
                size_hint_y: 0.1
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None

            # Email Display
            Label:
                text: 'Email: gegi10@gmail.com'
                font_size: 18
                color: 0.3, 0.3, 0.3, 1
                bold: True
                size_hint_y: 0.1
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None

            Button:
                text: 'Favorit'
                size_hint_y: 0.15
                background_normal: ''
                background_color: 0.2, 0.6, 0.8, 1
                color: 1, 1, 1, 1
                font_size: 18
                bold: True
                pos_hint: {'center_x': 0.5}
                on_release: app.root.current = 'favorit' 

            # Logout Button
            Button:
                text: 'Keluar'
                size_hint_y: 0.15
                background_normal: ''
                background_color: 0.8, 0.2, 0.2, 1  # Red color for the logout button
                color: 1, 1, 1, 1  # White text
                font_size: 18
                bold: True
                pos_hint: {'center_x': 0.5}
                on_release: app.logout()  # Call function to log out

        # Navbar di bagian bawah
        BoxLayout:
            size_hint_y: 0.1
            spacing: 10
            padding: [10, 0]

            Button:
                text: 'Artikel'
                background_normal: ''
                background_color: 0.8, 0.3, 0.3, 1  
                color: 1, 1, 1, 1
                on_release: app.root.current = 'artikel'  # Navigate to ArtikelScreen

            Button:
                text: 'Beranda'
                background_normal: ''
                background_color: 0.3, 0.6, 0.3, 1
                color: 1, 1, 1, 1
                on_release: app.root.current = 'beranda'  # Navigate to BerandaScreen

            Button:
                text: 'Resep'
                background_normal: ''
                background_color: 0.3, 0.3, 0.8, 1
                color: 1, 1, 1, 1
                on_release: app.root.current = 'resep'  # Navigate to ResepScreen

            Button:
                text: 'Profil'
                background_normal: ''
                background_color: 0.8, 0.8, 0.3, 1
                color: 1, 1, 1, 1
                on_release: app.root.current = 'profil'  # Navigate to ProfilScreen
