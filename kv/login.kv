<ScreenManagement>:
    LoginScreen:
    BerandaScreen:

<LoginScreen>:
    name: 'login'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background for a simple, modern look
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Welcome Back'
            font_size: 28
            color: (0.1, 0.1, 0.1, 1)  # Dark gray for contrast
            bold: True
            size_hint_y: 0.2
            halign: 'center'
            valign: 'middle'

        TextInput:
            hint_text: 'Username'
            size_hint_y: 0.1
            font_size: 18
            foreground_color: (0.2, 0.2, 0.2, 1)
            background_normal: ''
            background_color: (0.9, 0.9, 0.9, 1)
            padding: [10, 10]

        TextInput:
            hint_text: 'Password'
            password: True
            size_hint_y: 0.1
            font_size: 18
            foreground_color: (0.2, 0.2, 0.2, 1)
            background_normal: ''
            background_color: (0.9, 0.9, 0.9, 1)
            padding: [10, 10]

        Button:
            text: 'Masuk'
            size_hint_y: 0.15
            background_normal: ''
            background_color: (0.2, 0.6, 0.2, 1)
            color: (1, 1, 1, 1)
            font_size: 18
            on_release: app.root.current = 'beranda'

<BerandaScreen>:
    name: 'beranda'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Ini Beranda'
        Button:
            text: 'Logout'
            on_release: app.root.current = 'login'
