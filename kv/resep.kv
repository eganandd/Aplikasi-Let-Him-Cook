<ResepScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: (0.3, 0.3, 0.8, 1) 
            Rectangle:
                pos: self.pos
                size: self.size

        # Header
        BoxLayout:
            size_hint_y: None
            height: 50
            Label:
                text: 'Resep'
                font_size: 24
                color: (1, 1, 1, 1)
                halign: 'center'
                valign: 'middle'
                size_hint_x: 1
                bold: True

        # Description below the title
        Label:
            text: 'Inilah tempatnya segala resep masakan enak! Let Him Cook telah siapkan beragam hidangan seru bergaya rumahan, tepat sebagai masakan sehari-hari.'
            font_size: 16
            size_hint_y: None
            height: '60dp'
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            color: (1, 1, 1, 1)

        # Recipe List
        ScrollView:
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10

                # Example Recipe Item for Nasi Goreng
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '200dp'  # Increased height

                    # Vertical layout for image and label
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.8  # Adjust width ratio
                        Image:
                            source: 'img/nasi_goreng.png'  # Replace with your image path
                            size_hint: (1, None)
                            height: '140dp'  # Increased image height
                            allow_stretch: True
                            keep_ratio: True
                            on_touch_down: app.show_recipe('resep1') if self.collide_point(*args[1].pos) else None  # Navigate to resep1 on image touch
                        Label:
                            text: 'Resep Nasi Goreng Rempah Enak dan Mudah Dibuat'
                            font_size: 18  # Slightly smaller font
                            bold: True
                            halign: 'center'
                            valign: 'middle'
                            text_size: self.size
                            size_hint_y: None
                            height: '40dp'  # Adjusted height

                # Example Recipe Item for Telur Dadar
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '200dp'  # Increased height

                    # Vertical layout for image and label
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.8  # Adjust width ratio
                        Image:
                            source: 'img/telur_dadar.png'  # Replace with your image path
                            size_hint: (1, None)
                            height: '140dp'  # Increased image height
                            allow_stretch: True
                            keep_ratio: True
                            on_touch_down: app.show_recipe('resep2') if self.collide_point(*args[1].pos) else None  # Navigate to resep2 on image touch
                        Label:
                            text: 'Cara Membuat Telur Dadar Tebal Gurih dan Matang Merata'
                            font_size: 18  # Slightly smaller font
                            bold: True
                            halign: 'center'
                            valign: 'middle'
                            text_size: self.size
                            size_hint_y: None
                            height: '40dp'  # Adjusted height

                # Continue adding more recipes similarly...

        # Footer (Bottom Navigation Bar)
        BoxLayout:
            size_hint_y: None
            height: 60
            spacing: 10
            canvas.before:
                Color:
                    rgba: (0.95, 0.95, 0.95, 1)  # Light gray background for footer
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: 'Artikel'
                on_release: app.root.current = 'artikel'
                size_hint_x: 1
                background_color: (0.8, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: 'Beranda'
                on_release: app.root.current = 'beranda'
                size_hint_x: 1
                background_color: (0.3, 0.6, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: 'Resep'
                on_release: app.root.current = 'resep'
                size_hint_x: 1
                background_color: (0.3, 0.3, 0.8, 1)
                color: (1, 1, 1, 1)
            Button:
                text: 'Profil'
                on_release: app.root.current = 'profil'
                size_hint_x: 1
                background_color: (0.8, 0.8, 0.3, 1)
                color: (1, 1, 1, 1)
