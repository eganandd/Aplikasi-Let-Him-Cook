<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background for simplicity
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Welcome to Let Him Cook!'
            font_size: 28
            color: (0.1, 0.1, 0.1, 1)  # Dark gray text
            bold: True
            size_hint_y: 0.2
            halign: 'center'
            valign: 'middle'
        
        Image:
            source: 'img/logo.png'
            size_hint_y: 0.3
            allow_stretch: True
            keep_ratio: True
            pos_hint: {'center_x': 0.5}

        Button:
            text: 'Login'
            size_hint_y: 0.15
            background_normal: ''
            background_color: (0.2, 0.6, 0.2, 1)  # Soft green for login
            color: (1, 1, 1, 1)  # White text
            font_size: 18
            on_release: app.root.current = 'masuk'
        
        Button:
            text: 'Daftar'
            size_hint_y: 0.15
            background_normal: ''
            background_color: (0.8, 0.2, 0.2, 1)  # Soft red for register
            color: (1, 1, 1, 1)  # White text
            font_size: 18
            on_release: app.root.current = 'register'

        Label:
            text: 'Temukan Resep Lezat Hari ini'
            font_size: 18
            color: (0.2, 0.2, 0.2, 1)  # Dark gray text for subtlety
            size_hint_y: 0.1
            halign: 'center'
            valign: 'middle'
