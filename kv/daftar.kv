<DaftarScreen>:
    name: 'register'
    username: username
    email: email
    password: password

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Create Account'
            font_size: 28
            color: (0.1, 0.1, 0.1, 1)  # Dark gray text
            bold: True
            size_hint_y: 0.2
            halign: 'center'
            valign: 'middle'

        TextInput:
            id: username
            hint_text: 'Username'
            size_hint_y: 0.1
            multiline: False
            font_size: 18
            hint_text_color: (0.5, 0.5, 0.5, 1)  # Lighter gray hint text
            foreground_color: (0.1, 0.1, 0.1, 1)  # Dark gray text

        TextInput:
            id: email
            hint_text: 'Email'
            size_hint_y: 0.1
            multiline: False
            font_size: 18
            hint_text_color: (0.5, 0.5, 0.5, 1)
            foreground_color: (0.1, 0.1, 0.1, 1)

        TextInput:
            id: password
            hint_text: 'Password'
            password: True
            size_hint_y: 0.1
            multiline: False
            font_size: 18
            hint_text_color: (0.5, 0.5, 0.5, 1)
            foreground_color: (0.1, 0.1, 0.1, 1)

        Button:
            text: 'Daftar'
            size_hint_y: 0.15
            background_normal: ''
            background_color: (0.8, 0.2, 0.2, 1)  # Soft red for register button
            color: (1, 1, 1, 1)  # White text
            font_size: 18
            on_release: root.daftar(username.text, email.text, password.text)
